{
  "name": "browser-kvs",
  "version": "1.0.0-rc",
  "description": "The key-value store library that allows consistent use of various stores supported by modern browsers.",
  "type": "module",
  "respository": {
    "type": "git",
    "url": "git+https://github.com/niceman114/browser-kvs"
  },
  "homepage": "https://github.com/niceman114/browser-kvs#readme",
  "keywords": [
    "browser",
    "kvs",
    "key-value-store",
    "storage",
    "localStorage",
    "sessionStorage"
  ],
  "author": {
    "name": "Dean Oh",
    "email": "niceman114@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run lint && npm run clean && npm run compile",
    "changelog": "auto-changelog -p",
    "clean": "rm -frv dist",
    "compile": "tsup",
    "deploy": "npm run build && npm run deploy:npmjs",
    "deploy:npmjs": "sh scripts/deploy-npmjs.sh",
    "deploy:local": "sh scripts/deploy-local.sh",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "jest",
    "test:clean": "jest --clearCache",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@types/is-number": "^7.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "auto-changelog": "^2.5.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "is-number": "^7.0.0"
  }
}
